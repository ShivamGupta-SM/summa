{
	"name": "@summa/root",
	"description": "Event-sourced double-entry financial ledger for TypeScript",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.6.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/summa-ledger/summa.git"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"test": "turbo test --filter=!@summa/integration-tests",
		"test:unit": "vitest run packages/core",
		"test:integration": "turbo test --filter=@summa/integration-tests",
		"test:coverage": "turbo test -- --coverage",
		"typecheck": "turbo typecheck",
		"clean": "turbo clean",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"lint:spell": "cspell . --color",
		"lint:packages": "turbo lint:package",
		"lint:types": "turbo lint:types",
		"lint:dependencies": "knip --strict",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"format:md": "remark . --output --quiet",
		"format:md:check": "remark . --quiet --frail",
		"changeset": "changeset",
		"release": "changeset publish",
		"prepare": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.3",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"@vitest/coverage-v8": "^3.0.0",
		"cspell": "^8.0.0",
		"knip": "^5.0.0",
		"lefthook": "^2.1.1",
		"remark-cli": "^12.0.0",
		"remark-preset-wooorm": "^10.0.0",
		"turbo": "^2.5.0",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
