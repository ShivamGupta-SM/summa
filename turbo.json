{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["tsconfig.base.json", "biome.json"],
	"globalPassThroughEnv": ["DATABASE_URL"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build", "build"],
			"inputs": ["$TURBO_DEFAULT$", "vitest.config.*", "src/**", "*.test.*"],
			"outputs": ["coverage/**"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
			"outputs": ["node_modules/.cache/ts/**"]
		},
		"lint:package": {
			"dependsOn": ["build"],
			"cache": false
		},
		"lint:types": {
			"dependsOn": ["build"],
			"cache": false
		},
		"clean": {}
	}
}
