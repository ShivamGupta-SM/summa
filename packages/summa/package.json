{
  "name": "summa",
  "version": "0.1.0",
  "description": "Event-sourced double-entry financial ledger for TypeScript",
  "type": "module",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "dev-source": "./src/index.ts",
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./plugins": {
      "dev-source": "./src/plugins/index.ts",
      "types": "./dist/plugins/index.d.mts",
      "default": "./dist/plugins/index.mjs"
    },
    "./types": {
      "dev-source": "./src/types/index.ts",
      "types": "./dist/types/index.d.mts",
      "default": "./dist/types/index.mjs"
    },
    "./db": {
      "dev-source": "./src/db/index.ts",
      "types": "./dist/db/index.d.mts",
      "default": "./dist/db/index.mjs"
    },
    "./config": {
      "dev-source": "./src/config/index.ts",
      "types": "./dist/config/index.d.mts",
      "default": "./dist/config/index.mjs"
    },
    "./error": {
      "dev-source": "./src/error/index.ts",
      "types": "./dist/error/index.d.mts",
      "default": "./dist/error/index.mjs"
    },
    "./api": {
      "dev-source": "./src/api/index.ts",
      "types": "./dist/api/index.d.mts",
      "default": "./dist/api/index.mjs"
    },
    "./api/hono": {
      "dev-source": "./src/api/hono.ts",
      "types": "./dist/api/hono.d.mts",
      "default": "./dist/api/hono.mjs"
    },
    "./api/express": {
      "dev-source": "./src/api/express.ts",
      "types": "./dist/api/express.d.mts",
      "default": "./dist/api/express.mjs"
    },
    "./api/fetch": {
      "dev-source": "./src/api/fetch.ts",
      "types": "./dist/api/fetch.d.mts",
      "default": "./dist/api/fetch.mjs"
    },
    "./api/next": {
      "dev-source": "./src/api/next.ts",
      "types": "./dist/api/next.d.mts",
      "default": "./dist/api/next.mjs"
    },
    "./api/fastify": {
      "dev-source": "./src/api/fastify.ts",
      "types": "./dist/api/fastify.d.mts",
      "default": "./dist/api/fastify.mjs"
    },
    "./webhooks": {
      "dev-source": "./src/webhooks/index.ts",
      "types": "./dist/webhooks/index.d.mts",
      "default": "./dist/webhooks/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "typecheck": "tsc --project tsconfig.json",
    "lint:package": "publint --strict",
    "lint:types": "attw --profile esm-only --pack .",
    "test:watch": "vitest",
    "prepublishOnly": "tsdown"
  },
  "dependencies": {
    "@summa/core": "workspace:*",
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.0",
    "@types/node": "^22.0.0",
    "publint": "^0.3.0",
    "tsdown": "catalog:",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18"
  }
}
