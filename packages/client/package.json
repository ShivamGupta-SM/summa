{
	"name": "@summa-ledger/client",
	"version": "0.2.1",
	"description": "Type-safe client SDK for the Summa ledger API",
	"type": "module",
	"license": "MIT",
	"sideEffects": false,
	"engines": {
		"node": ">=22.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"dev-source": "./src/index.ts",
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		},
		"./proxy": {
			"dev-source": "./src/proxy.ts",
			"types": "./dist/proxy.d.mts",
			"default": "./dist/proxy.mjs"
		},
		"./react": {
			"dev-source": "./src/react.ts",
			"types": "./dist/react.d.mts",
			"default": "./dist/react.mjs"
		},
		"./vue": {
			"dev-source": "./src/vue.ts",
			"types": "./dist/vue.d.mts",
			"default": "./dist/vue.mjs"
		},
		"./svelte": {
			"dev-source": "./src/svelte.ts",
			"types": "./dist/svelte.d.mts",
			"default": "./dist/svelte.mjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"typecheck": "tsc --project tsconfig.json",
		"lint:package": "publint --strict",
		"lint:types": "attw --profile esm-only --pack .",
		"test:watch": "vitest",
		"prepublishOnly": "tsdown"
	},
	"dependencies": {
		"@summa-ledger/core": "workspace:*"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"svelte": ">=4.0.0",
		"vue": ">=3.0.0"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": true
		},
		"vue": {
			"optional": true
		},
		"svelte": {
			"optional": true
		}
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "catalog:",
		"@types/react": "^19.0.0",
		"publint": "catalog:",
		"svelte": "^5.53.0",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vue": "^3.5.28"
	}
}
