{
  "name": "@summa/cli",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "summa": "./dist/index.mjs"
  },
  "exports": {
    ".": {
      "dev-source": "./src/index.ts",
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --project tsconfig.json",
    "lint:package": "publint --strict",
    "lint:types": "attw --profile esm-only --pack .",
    "prepublishOnly": "tsdown"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@summa/core": "workspace:*",
    "@summa/telemetry": "workspace:*",
    "c12": "^4.0.0",
    "commander": "^12.1.0",
    "dotenv": "^17.3.1",
    "jiti": "^2.6.1",
    "picocolors": "^1.1.1"
  },
  "peerDependencies": {
    "pg": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "catalog:",
    "@types/node": "catalog:",
    "@types/pg": "^8.16.0",
    "pg": "^8.18.0",
    "publint": "catalog:",
    "tsdown": "catalog:",
    "tsx": "^4.20.0",
    "typescript": "catalog:"
  }
}
